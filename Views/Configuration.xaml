<Grid
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Background="#E0E0E0">
	
		<StackPanel Orientation="Vertical" >
			
			
			<!-- USER'S INFORMATIONS -->
			<StackPanel Margin="5,15,5,5" Orientation="Vertical">
				<GroupBox Header="User's informations" Margin="0,0,0,0"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#1BA1E2 ">
					<StackPanel  Orientation="Vertical" HorizontalAlignment="Stretch" Height="150" >

						<Label Content="Basic options of the exe"></Label>

						<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
							<Label Content="EXE NAME:" Width="120"/>
							<TextBox x:Name="txtBoxExeName" Width="200" Text="" />
						</StackPanel>

						<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
							<Label Content="OUTPUT PATH:" Width="120"/>
							<TextBox x:Name="txtBoxPath" Width="200" Text="" />
							<Button x:Name="btnOutputPath" Content="Browse" Width="100" Margin="5,0,0,0"/>
						</StackPanel>

					</StackPanel>
				</GroupBox>
			</StackPanel>
			
		</StackPanel>		
		
    </Grid>


</Grid>